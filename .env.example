# ================================================
# Database Configuration (Neon PostgreSQL)
# ================================================
# Get these from your Neon dashboard: https://console.neon.tech

# Direct connection (for Prisma migrations and schema changes)
DATABASE_URL="postgresql://username:password@ep-xxxx-xxxx-123456.us-east-2.aws.neon.tech/financial_bpo?sslmode=require"

# Pooled connection (for application queries - better performance)
DATABASE_POOL_URL="postgresql://username:password@ep-xxxx-xxxx-123456-pooler.us-east-2.aws.neon.tech/financial_bpo?sslmode=require"

# ================================================
# Redis Configuration
# ================================================
# For local development: redis://localhost:6379
# For production: Use Upstash Redis or AWS ElastiCache
REDIS_URL="redis://localhost:6379"

# ================================================
# Authentication & Security
# ================================================
# Generate with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-this"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Encryption key for sensitive data (bank credentials, etc)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY="your-encryption-key-for-sensitive-data"

# ================================================
# Application URLs
# ================================================
# Backend API
API_URL="http://localhost:3333"
API_PORT="3333"

# Frontend URLs (Next.js public variables)
NEXT_PUBLIC_API_URL="http://localhost:3333"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ================================================
# DOMINIO Integration
# ================================================
# Contact DOMINIO for API credentials
DOMINIO_API_URL="https://api.dominioatende.com.br/v1"
DOMINIO_API_KEY="your-dominio-api-key"
DOMINIO_API_SECRET="your-dominio-api-secret"
DOMINIO_WEBHOOK_SECRET="your-webhook-secret"

